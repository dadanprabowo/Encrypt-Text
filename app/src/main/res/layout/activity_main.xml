<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Button
    android:text="encode"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/btn_encode"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="0dp"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintRight_toLeftOf="@id/btn_decode"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_height="wrap_content" />

<Button
    android:layout_marginHorizontal="10dp"
    android:id="@+id/btn_decode"
    android:text="decode"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="0dp"
    app:layout_constraintLeft_toRightOf="@id/btn_encode"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_height="wrap_content" />

    <EditText
        android:padding="10dp"
        android:background="@drawable/bg_edt"
        android:id="@+id/edt_process"
        android:textSize="16sp"
        android:hint="Masukkan teks yg akan di proses"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_decode"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
<TextView
    android:id="@+id/text_result"
    android:layout_margin="10dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_decode"
    android:layout_width="match_parent"
    android:text="Hasil"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>